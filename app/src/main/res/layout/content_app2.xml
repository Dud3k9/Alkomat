<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".app2"
    tools:showIn="@layout/activity_app2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/mezczyzna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/me_czyzna" />

            <RadioButton
                android:id="@+id/kobieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kobieta" />
        </RadioGroup>

        <EditText
            android:id="@+id/waga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/waga"
            android:inputType="number|numberSigned|numberDecimal"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="74dp" />

        <EditText
            android:id="@+id/ml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ilosc alkoholu w ml"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:id="@+id/procent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="% alkoholu"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:id="@+id/ilosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ilosc porcji"
            android:inputType="number|numberSigned|numberDecimal" />

        <Button
            android:id="@+id/oblicz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="oblicz"
            android:text="oblicz" />

        <TextView
            android:id="@+id/promil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000â€°"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="zapisz"
            android:text="Zapisz" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
